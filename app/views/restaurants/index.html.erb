<div class="container">
  <h1 class="mb-3">Restaurants</h1>
  <div class="cards">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant), class: "text-decoration-none" do %>
    <div class="card-trip">
      <img src="https://loremflickr.com/320/240/food/all?lock=<%=restaurant.id %>"/>
      <div class="card-trip-infos">
        <div>
          <h2>
            <%=restaurant.name%>
          </h2>
          <p>
            <%=restaurant.category%>
          </p>
        </div>
        <h2 class="card-trip-pricing">
          <%=restaurant.phone_number%>
        </h2>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
  <%= link_to "Add a new restaurant", new_restaurant_path(@restaurant), class: "btn btn-secondary mt-4 mb-5" %>
</div>
